// Yellow Grid Platform - Prisma Schema
// Architecture: Single schema with application-level multi-tenancy

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// IDENTITY & ACCESS MODULE
// ============================================================================

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String? // bcrypt hashed (nullable for future SSO-only users)
  firstName String  @map("first_name")
  lastName  String  @map("last_name")
  phone     String?

  // Profile settings
  avatarUrl          String? @map("avatar_url")
  avatarThumbnailUrl String? @map("avatar_thumbnail_url")
  preferredLanguage  String? @map("preferred_language") @db.VarChar(5) // en, fr, es, it, pt

  // Multi-tenancy (application-level)
  countryCode  String @map("country_code") @db.VarChar(3) // ES, FR, IT, PL
  businessUnit String @map("business_unit") @db.VarChar(50) // LM_ES, BD_FR

  // User classification and auth method
  userType       UserType @default(INTERNAL) @map("user_type")
  authProvider   String   @default("local") @map("auth_provider") @db.VarChar(20) // local, sso, auth0
  externalAuthId String?  @unique @map("external_auth_id") // For future Auth0 migration

  // Provider linkage (only for EXTERNAL users)
  providerId String?   @map("provider_id")
  provider   Provider? @relation(fields: [providerId], references: [id])

  workTeamId String?   @map("work_team_id")
  workTeam   WorkTeam? @relation(fields: [workTeamId], references: [id])

  // Account status
  isActive   Boolean @default(true) @map("is_active")
  isVerified Boolean @default(false) @map("is_verified")

  // Multi-factor authentication
  mfaEnabled Boolean @default(false) @map("mfa_enabled")
  mfaSecret  String? @map("mfa_secret") // Encrypted TOTP secret

  // Roles & Permissions
  roles         UserRole[]
  refreshTokens RefreshToken[]
  devices       RegisteredDevice[]

  // Notification preferences
  notificationPreference NotificationPreference?

  // Offline sync (Phase 3)
  deviceSyncs DeviceSync[]

  // Project ownership (Phase 2)
  pilotedProjects Project[] @relation("ProjectPilot")

  // Chat/Messaging (Phase 3)
  conversationParticipants ConversationParticipant[]

  // Audit
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  lastLoginAt DateTime? @map("last_login_at")

  @@index([email])
  @@index([userType])
  @@index([countryCode, businessUnit])
  @@index([providerId])
  @@index([workTeamId])
  @@map("users")
}

enum UserType {
  INTERNAL // Operators, admins, managers
  EXTERNAL_PROVIDER // Provider company users (managers)
  EXTERNAL_TECHNICIAN // Field technicians
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique // OPERATOR, ADMIN, PROVIDER_MANAGER, TECHNICIAN
  description String?
  permissions RolePermission[]
  users       UserRole[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("roles")
}

model Permission {
  id          String  @id @default(uuid())
  resource    String // service_orders, providers, assignments
  action      String // create, read, update, delete, assign
  description String?

  roles RolePermission[]

  @@unique([resource, action])
  @@map("permissions")
}

// Junction tables
model UserRole {
  userId String @map("user_id")
  roleId String @map("role_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("user_roles")
}

model RolePermission {
  roleId       String @map("role_id")
  permissionId String @map("permission_id")

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  isRevoked Boolean  @default(false) @map("is_revoked")

  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// Device registration for biometric authentication (technicians)
model RegisteredDevice {
  id          String  @id @default(uuid())
  userId      String  @map("user_id")
  deviceId    String  @unique @map("device_id")
  publicKey   String  @map("public_key") @db.Text // For biometric challenge-response
  platform    String  @db.VarChar(20) // ios, android
  deviceName  String  @map("device_name") @db.VarChar(255)
  deviceModel String? @map("device_model") @db.VarChar(100)

  isActive Boolean @default(true) @map("is_active")

  lastLoginAt DateTime? @map("last_login_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([deviceId])
  @@index([isActive])
  @@map("registered_devices")
}

// ============================================================================
// CONFIGURATION MODULE
// ============================================================================

model SystemConfig {
  id    String @id @default(uuid())
  key   String @unique
  value Json

  description String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("system_config")
}

model CountryConfig {
  countryCode String @id @map("country_code") @db.VarChar(3) // ES, FR, IT, PL

  // Regional settings
  timezone String @db.VarChar(50) // Europe/Madrid, Europe/Paris
  currency String @db.VarChar(3) // EUR
  locale   String @db.VarChar(10) // es-ES, fr-FR

  // Working days
  workingDays Json // ["MON", "TUE", "WED", "THU", "FRI"]

  // Buffers (global defaults)
  globalBufferDays Int @default(2) @map("global_buffer_days")
  staticBufferDays Int @default(1) @map("static_buffer_days")

  // Assignment settings
  autoAccept Boolean @default(false) @map("auto_accept") // ES/IT = true

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("country_config")
}

model BusinessUnitConfig {
  id           String @id @default(uuid())
  businessUnit String @unique @map("business_unit") @db.VarChar(50) // LM_ES
  countryCode  String @map("country_code") @db.VarChar(3)

  name     String  @db.VarChar(255)
  isActive Boolean @default(true) @map("is_active")

  // Contact
  email String?
  phone String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([countryCode])
  @@map("business_unit_config")
}

// ============================================================================
// PROVIDER & CAPACITY MODULE
// ============================================================================

model Provider {
  id         String  @id @default(uuid())
  externalId String? @unique @map("external_id") // SAP ID

  // Multi-tenancy
  countryCode  String @map("country_code") @db.VarChar(3)
  businessUnit String @map("business_unit") @db.VarChar(50)

  // Basic info
  name      String  @db.VarChar(255)
  legalName String  @map("legal_name") @db.VarChar(255)
  taxId     String? @map("tax_id") @db.VarChar(50)

  // Contact
  email String?
  phone String?

  // Address (enhanced - flattened for better querying)
  addressStreet     String? @map("address_street") @db.VarChar(255)
  addressCity       String? @map("address_city") @db.VarChar(100)
  addressPostalCode String? @map("address_postal_code") @db.VarChar(20)
  addressRegion     String? @map("address_region") @db.VarChar(50)
  addressCountry    String? @map("address_country") @db.VarChar(3)
  coordinates       Json? // {lat: number, lng: number}

  // Legacy JSON address (deprecated, kept for migration)
  address Json? // DEPRECATED - use flattened fields

  // Provider type & hierarchy
  providerType     ProviderTypeEnum @default(P1) @map("provider_type")
  parentProviderId String?          @map("parent_provider_id")
  parentProvider   Provider?        @relation("ProviderHierarchy", fields: [parentProviderId], references: [id])
  subProviders     Provider[]       @relation("ProviderHierarchy")

  // Status & Risk
  status         ProviderStatus @default(ACTIVE)
  riskLevel      RiskLevel      @default(NONE) @map("risk_level")
  riskReason     String?        @map("risk_reason") @db.Text
  riskAssessedAt DateTime?      @map("risk_assessed_at")

  // Commercial terms
  contractStartDate DateTime? @map("contract_start_date") @db.Date
  contractEndDate   DateTime? @map("contract_end_date") @db.Date
  paymentTermsDays  Int       @default(30) @map("payment_terms_days")

  // Relations
  workTeams WorkTeam[]
  users     User[]

  // Working schedule (provider-level calendar settings)
  workingSchedule ProviderWorkingSchedule?

  // Service priorities (P1/P2/Opt-out)
  servicePriorities ServicePriorityConfig[]

  // Intervention zones (geographic coverage)
  interventionZones InterventionZone[]

  // Store assignments
  storeAssignments ProviderStoreAssignment[]

  // Phase 2 relations
  serviceOrders ServiceOrder[]
  assignments   Assignment[]
  bookings      Booking[]

  // Chat/Messaging (Phase 3)
  conversationParticipants ConversationParticipant[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([countryCode, businessUnit])
  @@index([status])
  @@index([providerType])
  @@index([parentProviderId])
  @@index([riskLevel])
  @@map("providers")
}

enum ProviderTypeEnum {
  P1 // Primary Provider - direct contracts, primary zones
  P2 // Subcontractor - works under P1 supervision
}

enum ProviderStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum RiskLevel {
  NONE
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

// ============================================================================
// PROVIDER WORKING SCHEDULE (Provider-level calendar declaration)
// ============================================================================

model ProviderWorkingSchedule {
  id         String @id @default(uuid())
  providerId String @unique @map("provider_id")

  // Reference BU calendar config for defaults
  calendarConfigId String? @map("calendar_config_id")

  // Working days: 0=Sunday, 1=Monday, ..., 6=Saturday
  // NULL = inherit from CalendarConfig
  workingDays Json? @map("working_days") // [1,2,3,4,5,6] for Mon-Sat

  // Morning shift
  morningShiftEnabled Boolean? @map("morning_shift_enabled")
  morningShiftStart   String?  @map("morning_shift_start") @db.VarChar(5)
  morningShiftEnd     String?  @map("morning_shift_end") @db.VarChar(5)

  // Afternoon shift
  afternoonShiftEnabled Boolean? @map("afternoon_shift_enabled")
  afternoonShiftStart   String?  @map("afternoon_shift_start") @db.VarChar(5)
  afternoonShiftEnd     String?  @map("afternoon_shift_end") @db.VarChar(5)

  // Evening shift (optional)
  eveningShiftEnabled Boolean? @map("evening_shift_enabled")
  eveningShiftStart   String?  @map("evening_shift_start") @db.VarChar(5)
  eveningShiftEnd     String?  @map("evening_shift_end") @db.VarChar(5)

  // Lunch break
  lunchBreakEnabled Boolean @default(true) @map("lunch_break_enabled")
  lunchBreakStart   String? @map("lunch_break_start") @db.VarChar(5)
  lunchBreakEnd     String? @map("lunch_break_end") @db.VarChar(5)

  // Capacity limits (provider-wide)
  maxDailyJobsTotal  Int? @map("max_daily_jobs_total")
  maxWeeklyJobsTotal Int? @map("max_weekly_jobs_total")

  // Buffer overrides
  globalBufferDaysOverride    Int? @map("global_buffer_days_override")
  staticBufferDaysOverride    Int? @map("static_buffer_days_override")
  travelBufferMinutesOverride Int? @map("travel_buffer_minutes_override")

  // Cross-day/shift jobs
  allowCrossDayJobs   Boolean? @map("allow_cross_day_jobs")
  allowCrossShiftJobs Boolean? @map("allow_cross_shift_jobs")

  // Timezone override
  timezoneOverride String? @map("timezone_override") @db.VarChar(50)

  // Relations
  provider       Provider        @relation(fields: [providerId], references: [id], onDelete: Cascade)
  calendarConfig CalendarConfig? @relation(fields: [calendarConfigId], references: [id])

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  updatedBy String?  @map("updated_by") @db.VarChar(100)

  @@index([providerId])
  @@map("provider_working_schedules")
}

// ============================================================================
// SERVICE PRIORITY CONFIG (P1/P2/Opt-out - Critical Business Rule)
// ============================================================================

model ServicePriorityConfig {
  id         String @id @default(uuid())
  providerId String @map("provider_id")

  // Service Reference (links to ProviderSpecialty)
  specialtyId String @map("specialty_id")

  // Priority Classification
  priority ServicePriorityType @default(P2)

  // Bundling rules: For P2, which P1 service(s) can unlock this P2 service
  bundledWithSpecialtyIds Json? @map("bundled_with_specialty_ids") // String[]

  // Volume constraints
  maxMonthlyVolume     Int? @map("max_monthly_volume")
  currentMonthlyVolume Int  @default(0) @map("current_monthly_volume")

  // Pricing override
  priceOverridePercent Decimal? @map("price_override_percent") @db.Decimal(5, 2)

  // Validity period
  validFrom  DateTime  @default(now()) @map("valid_from") @db.Date
  validUntil DateTime? @map("valid_until") @db.Date

  // Relations
  provider  Provider          @relation(fields: [providerId], references: [id], onDelete: Cascade)
  specialty ProviderSpecialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([providerId, specialtyId])
  @@index([providerId])
  @@index([priority])
  @@map("service_priority_configs")
}

enum ServicePriorityType {
  P1 // Always Accept - core competency
  P2 // Bundle Only - requires P1 service in same order
  OPT_OUT // Never Accept - provider declines this service
}

// ============================================================================
// INTERVENTION ZONE (Geographic Coverage)
// ============================================================================

model InterventionZone {
  id         String @id @default(uuid())
  providerId String @map("provider_id")

  // Zone identification
  name     String  @db.VarChar(255)
  zoneCode String? @map("zone_code") @db.VarChar(50)

  // Zone type
  zoneType ZoneType @default(PRIMARY) @map("zone_type")

  // Geographic coverage
  postalCodes       Json? @map("postal_codes") // String[] of postal codes
  postalCodeVectors Json? @map("postal_code_vectors") // [{from, to}]
  boundaryGeoJson   Json? @map("boundary_geojson") // GeoJSON Polygon

  // Commute parameters
  maxCommuteMinutes   Int @default(60) @map("max_commute_minutes")
  defaultTravelBuffer Int @default(30) @map("default_travel_buffer")

  // Capacity in this zone
  maxDailyJobsInZone Int? @map("max_daily_jobs_in_zone")

  // Assignment priority (1 = highest)
  assignmentPriority Int @default(1) @map("assignment_priority")

  // Relations
  provider                Provider                 @relation(fields: [providerId], references: [id], onDelete: Cascade)
  workTeamZoneAssignments WorkTeamZoneAssignment[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([providerId, zoneCode])
  @@index([providerId])
  @@index([zoneType])
  @@map("intervention_zones")
}

enum ZoneType {
  PRIMARY // Main coverage area - prioritized
  SECONDARY // Extended coverage - lower priority
  OVERFLOW // Emergency coverage only
}

// ============================================================================
// PROVIDER STORE ASSIGNMENT (N:M Provider ↔ Store)
// ============================================================================

model ProviderStoreAssignment {
  id         String @id @default(uuid())
  providerId String @map("provider_id")
  storeId    String @map("store_id")

  // Assignment type
  assignmentType StoreAssignmentType @default(PRIMARY) @map("assignment_type")

  // Service scope (optional filter)
  serviceSpecialtyIds Json? @map("service_specialty_ids") // String[]

  // Active period
  activeFrom  DateTime  @default(now()) @map("active_from") @db.Date
  activeUntil DateTime? @map("active_until") @db.Date

  // Relations
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  store    Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([providerId, storeId])
  @@index([providerId])
  @@index([storeId])
  @@map("provider_store_assignments")
}

enum StoreAssignmentType {
  PRIMARY // Main provider for this store
  BACKUP // Backup provider (when primary unavailable)
  OVERFLOW // Overflow capacity only
}

// ============================================================================
// WORK TEAM (Enhanced)
// ============================================================================

model WorkTeam {
  id         String @id @default(uuid())
  providerId String @map("provider_id")

  // Multi-tenancy (inherited from provider)
  countryCode String @map("country_code") @db.VarChar(3)

  // Identification
  name       String  @db.VarChar(255)
  externalId String? @unique @map("external_id")

  // Status
  status WorkTeamStatus @default(ACTIVE)

  // Team composition
  minTechnicians Int @default(1) @map("min_technicians")
  maxTechnicians Int @default(2) @map("max_technicians")

  // Capacity (deprecated - use WorkTeamCalendar)
  maxDailyJobs Int @default(5) @map("max_daily_jobs")

  // Skills (DEPRECATED - will be migrated to ProviderSpecialtyAssignment)
  skills       Json? // ["installation", "repair", "tv"]
  serviceTypes Json? @map("service_types") // ["P1", "P2"]

  // Geographic coverage (DEPRECATED - use WorkTeamZoneAssignment)
  postalCodes Json? @map("postal_codes") // ["28001", "28002", ...]

  // Calendar (DEPRECATED - use WorkTeamCalendar)
  workingDays Json? @map("working_days") // ["MON", "TUE", ...]
  shifts      Json? // [{code:"M", startLocal:"08:00", endLocal:"13:00"}]

  // Relations
  provider Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)
  users    User[]

  // Work Team Certifications (NOTE: Certifications are at the team level, not individual)
  // This design avoids co-employer liability by not tracking individual technicians
  certifications WorkTeamCertification[]

  // Zone assignments (subset of provider's zones)
  zoneAssignments WorkTeamZoneAssignment[]

  // Structured specialties
  specialtyAssignments ProviderSpecialtyAssignment[]

  // Calendar (with inheritance from provider)
  calendar WorkTeamCalendar?

  // Phase 2 relations
  serviceOrders ServiceOrder[]
  assignments   Assignment[]
  bookings      Booking[]

  // Chat/Messaging (Phase 3)
  conversationParticipants ConversationParticipant[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([providerId])
  @@index([countryCode])
  @@index([status])
  @@map("work_teams")
}

enum WorkTeamStatus {
  ACTIVE
  INACTIVE
  ON_VACATION
  SUSPENDED
}

// ============================================================================
// WORK TEAM ZONE ASSIGNMENT (N:M WorkTeam ↔ InterventionZone)
// ============================================================================

model WorkTeamZoneAssignment {
  id                 String @id @default(uuid())
  workTeamId         String @map("work_team_id")
  interventionZoneId String @map("intervention_zone_id")

  // Override provider's zone settings
  maxDailyJobsOverride       Int? @map("max_daily_jobs_override")
  travelBufferOverride       Int? @map("travel_buffer_override")
  assignmentPriorityOverride Int? @map("assignment_priority_override")

  // Active period
  activeFrom  DateTime  @default(now()) @map("active_from") @db.Date
  activeUntil DateTime? @map("active_until") @db.Date

  // Relations
  workTeam         WorkTeam         @relation(fields: [workTeamId], references: [id], onDelete: Cascade)
  interventionZone InterventionZone @relation(fields: [interventionZoneId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([workTeamId, interventionZoneId])
  @@index([workTeamId])
  @@index([interventionZoneId])
  @@map("work_team_zone_assignments")
}

// ============================================================================
// WORK TEAM CALENDAR (Team-level overrides, inherits from Provider)
// ============================================================================

model WorkTeamCalendar {
  id         String @id @default(uuid())
  workTeamId String @unique @map("work_team_id")

  // Inheritance flag
  inheritFromProvider Boolean @default(true) @map("inherit_from_provider")

  // Working days (NULL = inherit from provider)
  workingDays Json? @map("working_days") // [1,2,3,4,5]

  // Morning shift
  morningShiftEnabled Boolean? @map("morning_shift_enabled")
  morningShiftStart   String?  @map("morning_shift_start") @db.VarChar(5)
  morningShiftEnd     String?  @map("morning_shift_end") @db.VarChar(5)
  morningCapacity     Int?     @map("morning_capacity")

  // Afternoon shift
  afternoonShiftEnabled Boolean? @map("afternoon_shift_enabled")
  afternoonShiftStart   String?  @map("afternoon_shift_start") @db.VarChar(5)
  afternoonShiftEnd     String?  @map("afternoon_shift_end") @db.VarChar(5)
  afternoonCapacity     Int?     @map("afternoon_capacity")

  // Evening shift
  eveningShiftEnabled Boolean? @map("evening_shift_enabled")
  eveningShiftStart   String?  @map("evening_shift_start") @db.VarChar(5)
  eveningShiftEnd     String?  @map("evening_shift_end") @db.VarChar(5)
  eveningCapacity     Int?     @map("evening_capacity")

  // Lunch break
  lunchBreakEnabled Boolean? @map("lunch_break_enabled")
  lunchBreakStart   String?  @map("lunch_break_start") @db.VarChar(5)
  lunchBreakEnd     String?  @map("lunch_break_end") @db.VarChar(5)

  // Capacity limits (team-level)
  maxDailyJobs  Int? @map("max_daily_jobs")
  maxWeeklyJobs Int? @map("max_weekly_jobs")

  // Buffer overrides
  travelBufferMinutes Int? @map("travel_buffer_minutes")

  // Cross-day/shift jobs
  allowCrossDayJobs   Boolean? @map("allow_cross_day_jobs")
  allowCrossShiftJobs Boolean? @map("allow_cross_shift_jobs")

  // Relations
  workTeam             WorkTeam              @relation(fields: [workTeamId], references: [id], onDelete: Cascade)
  plannedAbsences      PlannedAbsence[]
  dedicatedWorkingDays DedicatedWorkingDay[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  updatedBy String?  @map("updated_by") @db.VarChar(100)

  @@index([workTeamId])
  @@map("work_team_calendars")
}

// ============================================================================
// PLANNED ABSENCE (Vacation/Off Days)
// ============================================================================

model PlannedAbsence {
  id                 String @id @default(uuid())
  workTeamCalendarId String @map("work_team_calendar_id")

  // Absence period
  startDate DateTime @map("start_date") @db.Date
  endDate   DateTime @map("end_date") @db.Date

  // Absence type
  absenceType AbsenceType @map("absence_type")
  reason      String?     @db.VarChar(500)

  // Approval
  status     AbsenceStatus @default(PENDING)
  approvedBy String?       @map("approved_by") @db.VarChar(100)
  approvedAt DateTime?     @map("approved_at")

  // Relations
  workTeamCalendar WorkTeamCalendar @relation(fields: [workTeamCalendarId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdBy String   @map("created_by") @db.VarChar(100)

  @@index([workTeamCalendarId])
  @@index([startDate, endDate])
  @@map("planned_absences")
}

enum AbsenceType {
  VACATION
  SICK_LEAVE
  TRAINING
  MAINTENANCE
  STORE_CLOSURE
  OTHER
}

enum AbsenceStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

// ============================================================================
// DEDICATED WORKING DAY (Extra Capacity Days)
// ============================================================================

model DedicatedWorkingDay {
  id                 String @id @default(uuid())
  workTeamCalendarId String @map("work_team_calendar_id")

  // The special working day
  date DateTime @db.Date

  // Override capacity for this day
  morningCapacity   Int? @map("morning_capacity")
  afternoonCapacity Int? @map("afternoon_capacity")
  eveningCapacity   Int? @map("evening_capacity")

  // Reason for extra capacity
  reason String? @db.VarChar(500)

  // Relations
  workTeamCalendar WorkTeamCalendar @relation(fields: [workTeamCalendarId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  createdBy String   @map("created_by") @db.VarChar(100)

  @@unique([workTeamCalendarId, date])
  @@index([workTeamCalendarId])
  @@index([date])
  @@map("dedicated_working_days")
}

// ============================================================================
// WORK TEAM CERTIFICATION
// ============================================================================
// NOTE: Certifications are tracked at the Work Team level, NOT individual technician level.
// This is a deliberate design decision to avoid co-employer liability under EU/French labor law.
// The platform does not track, manage, or register individual technicians.
// See: docs/LEGAL_BOUNDARY_WORKTEAM_VS_TECHNICIAN.md

model WorkTeamCertification {
  id         String @id @default(uuid())
  workTeamId String @map("work_team_id")

  // Certification details
  certificationType CertificationType @map("certification_type")
  certificateName   String            @map("certificate_name") @db.VarChar(255)
  certificateNumber String?           @map("certificate_number") @db.VarChar(100)
  issuingAuthority  String?           @map("issuing_authority") @db.VarChar(255)

  // Validity
  issuedAt  DateTime  @map("issued_at") @db.Date
  expiresAt DateTime? @map("expires_at") @db.Date

  // Skills covered by this certification
  coveredSpecialtyIds Json @map("covered_specialty_ids") // String[]

  // Document
  documentUrl String? @map("document_url") @db.VarChar(500)

  // Status
  isVerified Boolean   @default(false) @map("is_verified")
  verifiedAt DateTime? @map("verified_at")
  verifiedBy String?   @map("verified_by") @db.VarChar(100)

  // Relations
  workTeam WorkTeam @relation(fields: [workTeamId], references: [id], onDelete: Cascade)

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([workTeamId])
  @@index([expiresAt])
  @@index([certificationType])
  @@map("work_team_certifications")
}

enum CertificationType {
  ELECTRICAL_LICENSE
  GAS_CERTIFICATION
  HVAC_CERTIFICATION
  PLUMBING_LICENSE
  APPLIANCE_BRAND
  SAFETY_TRAINING
  FIRST_AID
  OTHER
}

// ============================================================================
// EVENT OUTBOX (for exactly-once event publishing)
// ============================================================================

model EventOutbox {
  id            String      @id @default(uuid())
  aggregateType String      @map("aggregate_type") @db.VarChar(50)
  aggregateId   String      @map("aggregate_id") @db.VarChar(100)
  eventType     String      @map("event_type") @db.VarChar(100)
  payload       Json
  status        EventStatus @default(PENDING)

  createdAt   DateTime  @default(now()) @map("created_at")
  publishedAt DateTime? @map("published_at")

  @@index([status, createdAt])
  @@map("event_outbox")
}

enum EventStatus {
  PENDING
  PUBLISHED
  FAILED
}

// ============================================================================
// SERVICE & PROVIDER REFERENTIAL MODULE
// ============================================================================

// ----------------------------------------------------------------------------
// GEOGRAPHIC MASTER DATA (3-level hierarchy)
// ----------------------------------------------------------------------------

model Country {
  id   String @id @default(uuid())
  code String @unique @db.VarChar(3) // ES, FR, IT, PL
  name String @db.VarChar(100)

  // Regional settings
  timezone String @db.VarChar(50) // Europe/Madrid, Europe/Paris
  currency String @db.VarChar(3) // EUR
  locale   String @db.VarChar(10) // es-ES, fr-FR

  // Relations
  provinces Province[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("countries")
}

model Province {
  id          String @id @default(uuid())
  countryCode String @map("country_code") @db.VarChar(3)
  code        String @db.VarChar(10) // 28 (Madrid), 75 (Paris)
  name        String @db.VarChar(100)

  // Relations
  country Country @relation(fields: [countryCode], references: [code], onDelete: Cascade)
  cities  City[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([countryCode, code])
  @@index([countryCode])
  @@map("provinces")
}

model City {
  id         String @id @default(uuid())
  provinceId String @map("province_id")
  code       String @db.VarChar(20) // INE/INSEE codes
  name       String @db.VarChar(100)

  // Relations
  province    Province     @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  postalCodes PostalCode[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([provinceId, code])
  @@index([provinceId])
  @@map("cities")
}

model PostalCode {
  id     String @id @default(uuid())
  cityId String @map("city_id")
  code   String @db.VarChar(10) // 28001, 75001, etc.

  // Geographic coordinates for distance calculations
  latitude  Decimal? @db.Decimal(10, 8) // e.g., 40.41678901
  longitude Decimal? @db.Decimal(11, 8) // e.g., -3.70378876

  // Relations
  city           City             @relation(fields: [cityId], references: [id], onDelete: Cascade)
  servicePricing ServicePricing[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([cityId, code])
  @@index([code]) // Fast postal code lookup
  @@index([cityId])
  @@map("postal_codes")
}

