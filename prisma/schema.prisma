// Enables communication between: Customer, Operator, WorkTeam, Provider Manager
// Each service order has ONE conversation thread with all parties

model ServiceOrderConversation {
  id             String @id @default(uuid())
  serviceOrderId String @unique @map("service_order_id")

  // Multi-tenancy
  countryCode  String @map("country_code") @db.VarChar(3)
  businessUnit String @map("business_unit") @db.VarChar(50)

  // Conversation status
  status ConversationStatus @default(ACTIVE)

  // Participants tracking (for quick access)
  participantIds Json @map("participant_ids") // Array of user IDs

  // Unread counts (per participant - stored as JSON for flexibility)
  unreadCounts Json? @map("unread_counts") // {userId: count}

  // Last activity
  lastMessageAt      DateTime? @map("last_message_at")
  lastMessagePreview String?   @map("last_message_preview") @db.VarChar(200)

  // Relations
  serviceOrder ServiceOrder              @relation(fields: [serviceOrderId], references: [id], onDelete: Cascade)
  messages     ServiceOrderMessage[]
  participants ConversationParticipant[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([serviceOrderId])
  @@index([lastMessageAt])
  @@index([countryCode, businessUnit])
  @@map("service_order_conversations")
}

enum ConversationStatus {
  ACTIVE
  ARCHIVED
  CLOSED
}

model ConversationParticipant {
  id             String @id @default(uuid())
  conversationId String @map("conversation_id")

  // Participant identity
  userId        String? @map("user_id") // For internal users (operators, workteam, provider managers)
  customerEmail String? @map("customer_email") // For external customers (no user account)
  customerPhone String? @map("customer_phone")

  // Role in conversation
  participantType ParticipantType @map("participant_type")
  displayName     String          @map("display_name") @db.VarChar(255)

  // Optional context
  workTeamId String? @map("work_team_id")
  providerId String? @map("provider_id")

  // Participation status
  isActive Boolean   @default(true) @map("is_active")
  joinedAt DateTime  @default(now()) @map("joined_at")
  leftAt   DateTime? @map("left_at")

  // Last read tracking
  lastReadAt        DateTime? @map("last_read_at")
  lastReadMessageId String?   @map("last_read_message_id")

  // Notification preferences for this conversation
  notificationsEnabled Boolean @default(true) @map("notifications_enabled")

  // Relations
  conversation ServiceOrderConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User?                    @relation(fields: [userId], references: [id], onDelete: SetNull)
  workTeam     WorkTeam?                @relation(fields: [workTeamId], references: [id], onDelete: SetNull)
  provider     Provider?                @relation(fields: [providerId], references: [id], onDelete: SetNull)
  messages     ServiceOrderMessage[]

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([conversationId, userId])
  @@unique([conversationId, customerEmail])
  @@index([conversationId])
  @@index([userId])
  @@index([workTeamId])
  @@index([providerId])
  @@map("conversation_participants")
}

enum ParticipantType {
  CUSTOMER // End customer
  OPERATOR // Control tower operator
  WORK_TEAM // Field technician/workteam
  PROVIDER_MANAGER // Provider company manager
  SYSTEM // Automated messages
}

model ServiceOrderMessage {
  id             String @id @default(uuid())
  conversationId String @map("conversation_id")
  participantId  String @map("participant_id")

  // Message content
  messageType MessageType @default(TEXT) @map("message_type")
  content     String      @db.Text

  // Attachments
  attachments Json? // [{type, url, name, size}]

  // Reply context
  replyToMessageId String? @map("reply_to_message_id")

  // Message status
  status MessageStatus @default(SENT)

  // Delivery tracking (for each participant)
  deliveryStatus Json? @map("delivery_status") // {userId: {delivered: true, read: true, timestamp}}

  // Edit history
  isEdited        Boolean   @default(false) @map("is_edited")
  editedAt        DateTime? @map("edited_at")
  originalContent String?   @map("original_content") @db.Text

  // Soft delete
  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")
  deletedBy String?   @map("deleted_by")

  // Relations
  conversation ServiceOrderConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  participant  ConversationParticipant  @relation(fields: [participantId], references: [id], onDelete: Cascade)
  replyTo      ServiceOrderMessage?     @relation("MessageReplies", fields: [replyToMessageId], references: [id], onDelete: SetNull)
  replies      ServiceOrderMessage[]    @relation("MessageReplies")

  // Audit
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([conversationId])
  @@index([participantId])
  @@index([createdAt])
  @@index([replyToMessageId])
  @@map("service_order_messages")
}

enum MessageType {
  TEXT
  IMAGE
  DOCUMENT
  VOICE
  LOCATION
  SYSTEM // Automated system messages (status updates, etc.)
}

enum MessageStatus {
  SENDING
  SENT
  DELIVERED
  READ
  FAILED
}
